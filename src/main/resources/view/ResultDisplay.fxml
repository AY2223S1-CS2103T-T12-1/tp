<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="placeHolder" styleClass="transparent-bg" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
  <TextArea fx:id="resultDisplay" editable="false" styleClass="result-display" wrapText="true" />
  <Label fx:id="focusLabel" styleClass="label-bright" StackPane.alignment="TOP_RIGHT">
    <StackPane.margin>
      <Insets right="5.0" top="5.0" />
    </StackPane.margin>
  </Label>
</StackPane>
