<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="130" maxWidth="280" alignment="CENTER">
  <VBox minHeight="30" minWidth="140" maxWidth="140" alignment="CENTER">
    <VBox VBox.vgrow="ALWAYS">
      <Label fx:id="id" styleClass="cell_big_label" text="\$phone" wrapText="true"/>
      <VBox VBox.vgrow="ALWAYS" alignment="CENTER">
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" wrapText="true" translateY="-20"/>
      </VBox>
    </VBox>
  </VBox>
  <Separator orientation="VERTICAL" styleClass="separator-card" maxHeight="80"/>
  <VBox alignment="CENTER" minHeight="30" minWidth="140" maxWidth="140">
    <padding>
      <Insets top="15" right="15" bottom="15" left="15" />
    </padding>
    <Region VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER_LEFT" spacing="10">
      <ImageView fx:id="phoneImage" fitHeight="20" fitWidth="20"/>
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true"/>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10">
      <ImageView fx:id="loanImage" fitHeight="20" fitWidth="20"/>
      <Label fx:id="loanAmount" styleClass="cell_small_label" text="\$loan" wrapText="true" />
    </HBox>
    <Region VBox.vgrow="ALWAYS"/>
    <FlowPane alignment="BOTTOM_RIGHT" fx:id="tags"/>
  </VBox>
</HBox>
