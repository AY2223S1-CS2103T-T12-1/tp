<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="NEVER">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="250" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="30" GridPane.columnIndex="0" GridPane.vgrow="ALWAYS">
      <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
      </padding>
      <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      <Label fx:id="id" text="\$index" styleClass="cell_small_label" />
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      <Label fx:id="loanAmount" styleClass="cell_small_label" text="\$loanAmount" />
      <Region VBox.vgrow="ALWAYS"/>
      <FlowPane alignment="BOTTOM_RIGHT" fx:id="tags"/>
    </VBox>
  </GridPane>
</HBox>
